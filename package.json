{
  "name": "baas",
  "version": "0.0.1",
  "description": "üç∫üçª Beer as a Service - A Nest app serving fresh Beer ",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "npm run start:dev",
    "postinstall": "tsc",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"{src/**/,test/**/ }*.{ts,css,scss,html,json}\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/src/main.js",
    "prestart:prod": "rimraf dist && npm run build",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:cov": "jest --coverage && open ./coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "uploadcov": "./node_modules/.bin/codecov"
  },
  "engines": {
    "node": "9.11.2"
  },
  "dependencies": {
    "@nestjs/common": "6.6.7",
    "@nestjs/core": "6.6.7",
    "@nestjs/graphql": "6.5.1",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/passport": "6.1.0",
    "@nestjs/platform-express": "6.6.7",
    "@nestjs/swagger": "3.1.0",
    "apollo-server-express": "^2.8.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "dotenv": "^8.0.0",
    "graphql": "^14.4.2",
    "hbs": "^4.0.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.4.0",
    "swagger-ui-express": "^4.0.2",
    "type-graphql": "^0.17.4"
  },
  "devDependencies": {
    "@nestjs/testing": "6.5.3",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "2.0.8",
    "codecov": "^3.7.1",
    "husky": "^3.0.3",
    "jest": "24.9.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test && npm run test:e2e"
    }
  }
}
